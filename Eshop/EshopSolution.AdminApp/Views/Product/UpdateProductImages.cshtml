@using EshopSolution.ViewModels.Catalog.ProductImages
@model List<ProductImageViewModel>
@{
    ViewData["Title"] = "UpdateProductImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .img {
        width: 100%;
    }

    .column {
        float: left;
        width: 25%;
        padding: 10px;
    }

        .column img {
            opacity: 0.8;
            cursor: pointer;
        }

            .column img:hover {
                opacity: 1;
            }
</style>




<div id="layoutSidenav">
    <div class="container-fluid">
        <div class="card-body">
            <div class="align-items-center">               
                <h1>Cập nhật hình ảnh</h1>
                <div class="row">

                    <div class="col-md">
                        <img id="expandImg" class="img-fluid" height="350px"/>
                        <div class="row">
                            @foreach (var image in Model)
                            {
                                <div class="column">
                                    <img src="@image.ImagePath" class="img-fluid" alt="@image.Caption" data-id="@image.Id" onclick="extend(this) " />
                                </div>

                            }

                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary" id="btnAddImgae" data-toggle="modal" data-target="#addImageModal">THêm ảnh</button>
                        </div>


                    </div>
                    <div class="col-md">
                        <br />
                        <br />
                        <br />
                        <br />
                        <div class="form-group">

                            <label class="control-label">Chú Thích</label>
                            <input id="inputEditCaption" type="text" class="form-control" />



                        </div>
                        <br />
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary"> Cập nhật</button>
                            &nbsp;
                            <button type="button" class="btn btn-secondary" onclick="deleteImage()">Xóa</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<!--Add image modal-->
<div class="modal fade" id="addImageModal">
    <div class="modal-dialog modal-dialog-centered" style="width:700px;height:700px">
        <div class="modal-content">
            <!--modal header-->
            <div class="modal-header">
                <div class="d-flex justify-content-center">
                    <h4>Thêm hình ảnh cho sản phẩm</h4>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!--modal body-->

            <div class="modal-body">
                <div class="col-md">
                    <img id="imageAdd" class="img-fluid"/>
                    <input type="file" id="inputImage" onchange="loadImageAdd(this.files[0])" accept="image/*" name="Chọn ảnh"/>
                    <br />

                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label  class="control-label">Ghi chú</label>
                        <input class="form-control" type="text" id="captionImage"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="addImage()">Thêm</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    function extend(img) {
        var expandImg = document.getElementById("expandImg");
        expandImg.src = img.src;
        expandImg.parentElement.style.display = "Block";
        $(expandImg).attr("data-id", $(img).attr("data-id"));


    }
    function loadImageAdd(image) {
        document.getElementById("imageAdd").src = window.URL.createObjectURL(image);
    }
    function closeModal() {
        document.getElementById("addImageModal").style.display = "none";
    }


    function addImage() {
       
        var caption = document.getElementById("captionImage").value;
        var file = document.getElementById("inputImage").files[0];
        var request = new FormData;
        request.append("ImageFile", file);
        request.append("ProductId", @ViewBag.ProductId);
        request.append("Caption", caption);
        request.append("SortOrder", 0);
        request.append("IsDefault", false);

        $.ajax({
            type: "POST",
            url: '/Product/AddImage',
            data: request,
            contentType: false,
            processData: false,
          
            success: function (res) {
                console.log("success");
                $('#addImageModal').modal('hide');
                location.reload();
            }

        });


    }
    
    function deleteImage() {
        var imageId = $("#expandImg").attr("data-id");
        if (imageId != null) {
            $.ajax({
                type: "POST",
                url: '/Product/DeleteImage',
                data: {
                    imageId: imageId
                },
                success: function () {
                    location.reload();
                }

            });
        } else {
            alert("Chưa có ảnh được chọn");
        }
        
        

    }
</script>



