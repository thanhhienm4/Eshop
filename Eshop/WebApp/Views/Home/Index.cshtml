@model EshopSolution.WebApp.Models.HomeViewModel
@using EshopSolution.ViewModels.Catalog.Products
@using LazZiya.ExpressLocalization
@inject ISharedCultureLocalizer _loc
@{
    var culture = CultureInfo.CurrentCulture.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



</script>
@section slider{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @foreach (var slide in Model.Slides)
                {
                    <div class="item">
                        <div class="container">
                            <a href=@slide.Url><img style="width:100%" src="@slide.Image" alt="@slide.Name" /></a>
                            <div class="carousel-caption">
                                <h4>@slide.Name</h4>
                                <p>@slide.Desciption</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}

<div class="span9">
    <div class="well well-small">
        <h4><localize>Latest Products</localize><small class="pull-right">@Model.LatestProducts.Count <localize>Latest Products</localize> </small></h4>
        <div class="row-fluid">
            <div id="featured" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        List<List<ProductViewModel>> listOfLatestProduct = new List<List<ProductViewModel>>();
                        List<ProductViewModel> productViewModels = new List<ProductViewModel>();
                    }

                    @for (int index = 0; index < Model.LatestProducts.Count; index++)
                    {
                        productViewModels.Add(Model.LatestProducts[index]);
                        if (index % 4 == 3 || index == Model.LatestProducts.Count - 1)
                        {
                            listOfLatestProduct.Add(productViewModels);
                            productViewModels = new List<ProductViewModel>();
                        }
                    }
                    @for (int i = 0; i < listOfLatestProduct.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                <ul class="thumbnails">
                                    @foreach (ProductViewModel item in listOfLatestProduct[i])
                                    {
                                        <li class="span3">
                                            <div class="thumbnail">
                                                <i class="tag"></i>
                                                <a href="/@culture/@_loc["detail"]/@item.ProductId"><img src="@item.ThumbnailImage" alt="@item.Name"></a>
                                                <div class="caption">
                                                    <h5>@item.Name</h5>

                                                </div>
                                                <a class="btn btn-primary  ">
                                                    <div class="price">
                                                        @((int)item.Price)
                                                    </div>

                                                </a>
                                                
                                            </div>
                                        </li>
                                    }

                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <ul class="thumbnails">
                                    @foreach (ProductViewModel item in listOfLatestProduct[i])
                                    {
                                        <li class="span3">
                                            <div class="thumbnail">
                                                <i class="tag"></i>
                                                <a href="/@culture/@_loc["detail"]/@item.ProductId"><img src="@item.ThumbnailImage" alt="@item.Name"></a>
                                                <div class="caption">
                                                    <h5>@item.Name</h5>

                                                </div>
                                                <button class="btn btn-primary">
                                                    <div class="price">
                                                        @((int)item.Price)
                                                    </div>

                                                </button>
                                            </div>
                                        </li>
                                    }

                                </ul>
                            </div>
                        }

                    }


                </div>
                <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#featured" data-slide="next">›</a>
            </div>
        </div>
    </div>
    <h4><localize>Featured Products</localize> </h4>
    <ul class="thumbnails">
        @foreach (ProductViewModel item in Model.FeaturedProducts)
        {
            <li class="span3">
                <div class="thumbnail">
                    <a href="/@culture/@_loc["detail"]/@item.ProductId"><img src="@item.ThumbnailImage" alt="@item.Name" /></a>
                    <div class="caption">
                        <h5>@item.Name</h5>
                        <p>
                            @item.Description
                        </p>
                        <h4 style="text-align:center">
                            <a class="btn" href="/@culture/@_loc["detail"]/@item.ProductId">
                                <i class="icon-zoom-in"></i>
                            </a>
                            <a class="btn btn-add-cart" href="#" data-id="@item.ProductId">
                                <localize>Add to</localize>
                                <i class="icon-shopping-cart"></i>
                            </a>
                            <a class="btn btn-primary">
                                <div class="price">
                                    @((int)item.Price)
                                </div>
                                
                            </a>
                        </h4>
                    </div>
                </div>
            </li>
        }

    </ul>
</div>
