@using EshopSolution.ViewModels.System.Users
@model LoginRequest
@{
    var culture = CultureInfo.CurrentCulture.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    
    <div class="span1"> &nbsp;</div>
    <div class="span9">
        <div class="well">
            <h5>ALREADY REGISTERED ?</h5>
            <form action="/@culture/User/Login" method="post">

                <div class="form-group">
                    <label class="small mb-1">Tài khoản</label>
                    <input class="form-control py-4" asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
                </div>
                <div class="form-group">
                    <label class="small mb-1">Mật khẩu</label>
                    <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                </div>
                <div class="row justify-content-center">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> <localize>Remember me</localize>
                    </label>
                </div>
                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <a class="small" href="/User/ForgotPassword">Bạn quên mật khẩu?</a>
                    <button class="btn btn-primary" type="submit">Đăng nhập</button>

                </div>
                <a class="small" href="/@culture/User/Create">Tạo mới tài khoản </a>
            </form>
        </div>
    </div>
</div>

